    * { margin: 0; padding: 0; box-sizing: border-box; font-family: "Segoe UI", Tahoma, sans-serif; }
    body { background: #f9f9f9; color: #333; }
    header { background: linear-gradient(135deg, #4c6ef5, #15aabf); padding: 20px; text-align: center; color: #fff; font-size: 24px; font-weight: bold; letter-spacing: 2px; }
    .container { max-width: 1100px; margin: auto; padding: 40px 20px; text-align: center; }
    .container h1 { font-size: 42px; margin-bottom: 20px; color: #222; }
    .container p { font-size: 18px; line-height: 1.6; color: #555; margin-bottom: 30px; }
    .btn { background: #4c6ef5; color: #fff; padding: 14px 28px; border-radius: 8px; text-decoration: none; font-weight: bold; transition: 0.3s; }
    .btn:hover { background: #364fc7; }
    .cards { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 20px; margin-top: 40px; }
    .card { background: #fff; padding: 20px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); cursor: pointer; transition: 0.3s; }
    .card:hover { transform: translateY(-5px); box-shadow: 0 6px 15px rgba(0,0,0,0.15); }
    .card img { width: 80px; height: 80px; object-fit: contain; margin-bottom: 10px; }
    .card h3 { font-size: 18px; color: #222; margin-bottom: 5px; }
    .card p { font-size: 14px; color: #555; }
    footer { margin-top: 40px; text-align: center; padding: 20px; background: #eee; font-size: 14px; color: #555; }
    @media (max-width: 768px) { .container h1 { font-size: 32px; } .container p { font-size: 16px; } }

    /* Reduce unlock content overlay size */
    #ogjs_iframe {
      transform: scale(0.7) !important;
      transform-origin: top right !important;
    }
  </style>
</head>
